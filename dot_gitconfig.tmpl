[user]
  name = Joshua Wang
  email = {{ .github.email | quote }}
[core]
  editor = nvim -a=\\\"/usr/bin/vim\\\"
  excludesfile = ~/.gitignore_global
[merge]
  tool = diff
[alias]
  co = checkout
  ci = commit
  st = status
  br = branch  
  hist = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short
  type = cat-file -t
  dump = cat-file -p
[push]
  default = upstream
[init]
  defaultBranch = main
